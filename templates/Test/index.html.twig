{% extends 'layout.html.twig' %}

{% block title %}
{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="well text-center">Liste des utilisateurs</h1>
        <div class="row">
            <a href="{{ path('add') }}" class="btn btn-info">Ajouter un user</a>
            <a href="{{ path('generate') }}" class="btn btn-info">Générer un document</a>
        </div>
        <br>
        {% for user in users %}
            <div class="row">
                <div class="panel panel-info">
                    <p>
                        Nom : {{ user.name }}
                    </p>
                    <p>
                        Société : {{ user.company }}
                    </p>
                    <p>
                        Créé le {{ user.createdAt }}
                    </p>

                </div>

            </div>
            {% endfor %}
    </div>
{% endblock %}